{
  "version": 2,
  "configurePresets": [
    {
      "name": "default",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "devel",
      "inherits": "default",
      "cacheVariables": {
        "BUILD_TESTS": "ON",
        "BUILD_EXAMPLE": "ON",
        "USE_ASAN": "ON"
      }
    }
  ]
}
